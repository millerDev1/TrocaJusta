<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrocaJusta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="background-color: #d5d2c8">
    <header>
        <nav class="navbar  navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3  "
            style="background-color:#070743">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Principal" asp-action="Index">TrocaJusta</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav nav-pills" role="tablist">
                         
                        <li><a class="text-white " asp-area="" asp-controller="Principal" asp-action="Index">Inicio</a>
                        </li>

                        <li><a class="text-white " asp-area="" asp-controller="" asp-action="">Como Funciona</a>
                        </li>


                        <li class="cadastre dropdown">
                        <li ><a class="text-white " asp-area="" asp-controller="Usuario"
                                asp-action="Create">Cadastre-se</a></li>

                        </li>
                        <li ><a class="text-white " asp-area="" asp-controller="Login" asp-action="Index">Entre</a></li>

                    </ul>



                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
