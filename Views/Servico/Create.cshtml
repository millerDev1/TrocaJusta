@model TrocaJusta.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<h1>Serviço</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeServico" class="control-label">Serviço</label>
                <input asp-for="NomeServico" class="form-control" />
                <span asp-validation-for="NomeServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label">Data</label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback" class="control-label">Feedback</label>
                <input asp-for="Feedback" class="form-control" />
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Página anterior</a>
</div>

