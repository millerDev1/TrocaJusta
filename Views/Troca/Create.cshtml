@model TrocaJusta.Models.Troca

@{
    ViewData["Title"] = "Create";
}

<h1>Faça sua Troca!</h1>

<h4>Troca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServicoId1" class="control-label">Serviço:</label>
                <select asp-for="ServicoId1" class="form-control">
                    <option value = "0">Selecione</option>
                    <option value = "3">Analise</option>
                    <option value = "2">Consultoria</option>
                    <option value = "1">Manutenção</option>
                    <option value = "4">NetWork</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="ServicoId2" class="control-label">Serviços compativel com sua troca:</label>
                <select asp-for="ServicoId2" class="form-control">
                    <option value = "0">Selecione</option>
                    <option value = "3">Miller-eletrica-manutenção</option>
                    <option value = "2">joão-pedreiro-manutenção</option>
                    <option value = "1">paulo-Encanador-manutenção</option>
                    <option value = "4">william-pintor-manutenção</option>
                    </select>
            </div>
            
            <div class="form-group">
                <input style="background-color:#519548" type="submit" value="Trocar" class="btn btn-primary" />
                <input type="submit" value="Voltar" asp-action="Index" asp-controller="Home"  class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



