@model TrocaJusta.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Nome Completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label">CPF</label>
                <input type="text" asp-for="Cpf" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" class="form-control" placeholder="Exemplo: 000.000.000-00" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input type="date" asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="Telefone" class="control-label"></label>
                <input type="tel" asp-for="Telefone" class="form-control" placeholder="Exemplo: 00 0 0000-0000" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profissao" class="control-label"></label>
                <select asp-for="Profissao" class="form-control">
                    <option value = "0">Selecione</option>
                    <option value = "6">Administração</option>
                    <option value = "3">Análise e Desenvolvimento de Sistemas</option>
                    <option value = "20">Análise de Sistemas</option>
                    <option value = "17">Assistente de Vendas</option>
                    <option value = "12">Carpinteiro</option>
                    <option value = "4">Ciência da Computação</option>
                    <option value = "18">Contador</option>
                    <option value = "8">Design</option>
                    <option value = "9">Design Gráfico</option>
                    <option value = "7">Economia</option>
                    <option value = "1">Educação Fisica</option>
                    <option value = "13">Eletricista</option>
                    <option value = "14">Encanador</option>
                    <option value = "11">Engenheiro</option>
                    <option value = "16">Faxineiro</option>
                    <option value = "2">Nutrição</option>
                    <option value = "10">Pedreiro</option>
                    <option value = "15">Pintor</option>
                    <option value = "19">Programador</option>
                    <option value = "5">Sistemas da Informação</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NomeServico" class="control-label"></label>
                <select asp-for="NomeServico" class="form-control">
                    <option value = "0">Selecione</option>
                    <option value = "3">Analise</option>
                    <option value = "2">Consultoria</option>
                    <option value = "1">Manutenção</option>
                    <option value = "4">Network</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" asp-for="Email" class="form-control" placeholder="exemplo@hotmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class= "form-control" placeholder="Digite sua senha"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-control">
                    <option value = "0">Selecione</option>
                    <option value = "1">Masculino</option>
                    <option value = "2">Feminino</option>
                    <option value = "3">Prefiro não dizer</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

